{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["registry_version", "families"],
  "properties": {
    "registry_version": { "type": "string", "enum": ["1.0"] },
    "families": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/family" }
    }
  },
  "$defs": {
    "family_id": { "type": "string", "pattern": "^[a-z0-9_]+$" },
    "family": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "aliases", "keywords", "use_when", "fallback_families"],
      "properties": {
        "id": { "$ref": "#/$defs/family_id" },
        "aliases": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": { "$ref": "#/$defs/family_id" }
        },
        "keywords": {
          "type": "array",
          "uniqueItems": true,
          "items": { "type": "string", "minLength": 1 }
        },
        "use_when": { "type": "string", "minLength": 1 },
        "fallback_families": {
          "type": "array",
          "uniqueItems": true,
          "items": { "$ref": "#/$defs/family_id" }
        }
      }
    }
  }
}

