# MinIO root credentials (also used by SS for simplicity)
MINIO_ROOT_USER=ss-minio
MINIO_ROOT_PASSWORD=ss-minio-secret

# Published ports (host machine)
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
SS_API_PORT=8000

# SS core
SS_ENV=development
SS_LOG_LEVEL=INFO

# SS requires an explicit LLM provider at startup (even if you only use upload endpoints)
SS_LLM_PROVIDER=openai_compatible
SS_LLM_BASE_URL=https://example.invalid/v1
SS_LLM_API_KEY=dummy
SS_LLM_MODEL=claude-opus-4-5-20251101

# Upload sessions (MUST match src/config.py keys)
SS_UPLOAD_OBJECT_STORE_BACKEND=s3
SS_UPLOAD_S3_ENDPOINT=http://host.docker.internal:9000
SS_UPLOAD_S3_REGION=us-east-1
SS_UPLOAD_S3_BUCKET=ss-uploads
SS_UPLOAD_S3_ACCESS_KEY_ID=ss-minio
SS_UPLOAD_S3_SECRET_ACCESS_KEY=ss-minio-secret

SS_UPLOAD_PRESIGNED_URL_TTL_SECONDS=900
SS_UPLOAD_MAX_FILE_SIZE_BYTES=5368709120
SS_UPLOAD_MAX_SESSIONS_PER_JOB=64

SS_UPLOAD_MULTIPART_THRESHOLD_BYTES=67108864
SS_UPLOAD_MULTIPART_MIN_PART_SIZE_BYTES=5242880
SS_UPLOAD_MULTIPART_PART_SIZE_BYTES=8388608
SS_UPLOAD_MULTIPART_MAX_PART_SIZE_BYTES=67108864
SS_UPLOAD_MULTIPART_MAX_PARTS=10000

SS_UPLOAD_MAX_BUNDLE_FILES=64

# Tracing (disabled by default)
SS_TRACING_ENABLED=0
